{{# if products }}
    <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <ul class="list-group">
                    {{# each products }}
                    <li class="list-group-item">
                        <span class="badge">{{ this.qty }}</span>
                        <strong>{{this.item.title}}</strong>
                        <span class="label label-success">{{ this.price }}</span>
                        <div class="btn-group">
                            <button class="button btn btn-primary btn-xs dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Odober <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="/odoberJednu/{{this.item._id}}"> Odober jednu </a></li>
                                <li><a href="/odoberVsetky/{{this.item._id}}"> Vymaž všetko </a></li>
                            </ul>
                        </div>
                    </li>
                    {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
            <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
                <strong>Spolu: €{{ totalPrice }}</strong>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <a href="/shipping">
                <button type="button" class="btn btn-success"> Prejsť k pokladni </button>
            </a>
        </div>
    </div>
{{ else }}
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <h2> Nieto nič v košíku </h2>
            <p> pomôžeme vybrať, či len pozeráte? </p>
        </div>
</div>
{{/if}}
