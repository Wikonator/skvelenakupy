<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

<div class="row">
    <h3> Na dobierku </h3>
    <p> Zaplatím keď si zásielku prevezmem </p>
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <ul class="list-group">
            {{# each products }}
            <li class="list-group-item">
                <span class="badge">{{ this.qty }}</span>
                <strong>{{this.item.title}}</strong>
                <span class="label label-success">{{ this.price }}</span>
            </li>
            {{/each}}
    </ul>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            <strong>Spolu: €{{ totalPrice }}</strong>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
            Posielať to budeme sem:
            <ul>
              <!-- {{# ship}} -->
                <li> {{this.meno}} {{this.priezvisko}}</li>
                <li> {{this.ulica}} {{this.cislo}}</li>
                <li> {{this.psc}} {{this.mesto}} </li>
              {{/ship}}
            </ul>
        </div>
    </div>
  <div>
  <p> Hop! Pomýlila som sa...
  <button type="button" class="btn btn-secondary btn-lg" onclick="window.location.href='/kosik'">Späť</button>
  </div>
  <div>
      <p> Všetko sedí! </p>
  <button type="button" id="button" class="btn btn-primary btn-lg"> Pošli mi to </button>
</div>
<script type="text/javascript">
    $(function() {
        var mail = function () {
            $.get("/email").done(function() {
                console.log("im changing window.location now");
                window.location = "user/userprofile";
            });
        };

        $( "#button" ).click(function() {
            mail();
        });
});
</script>
