<div class="row">
    <div class=".col-md-8.col-md-offset-2">

        <h3> Hello there. </h3>

        {{# if success}}
        <p>{{this.success}}</p>
        {{/ if }}

        <h3> Moje objednávky </h3>
        {{# each orders }}
        <div class="panel panel-default">
          <div class="panel-body">
              <ul class="list-group">
                  {{# each this.items}}
                <li class="list-group-item">
                  <span class="badge">{{ this.price }}</span>
                  {{ this.item.title }} | {{ this.qty }} Krát
                </li>
                {{/ each }}
              </ul>
          </div>
          <div class="panel-footer">
              <strong>Spolu: €{{this.cart.totalPrice}}</strong>
          </div>
        </div>
        {{/ each }}
    </div>
</div>
